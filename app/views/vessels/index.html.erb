<p id="notice"><%= notice %></p>

<h1>Vessels</h1>

<table>
  <thead>
    <tr>
      <th>Hail Sign</th>
      <th>Name</th>
      <th>Vessel</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vessels.each do |vessel| %>
      <tr>
        <td><%= vessel.hail_sign %></td>
        <td><%= vessel.name %></td>
        <td><%= vessel.vessel_id %></td>
        <td><%= vessel.vessel_type %></td>
        <td><%= link_to 'Show', vessel %></td>
        <td><%= link_to 'Edit', edit_vessel_path(vessel) %></td>
        <td><%= link_to 'Destroy', vessel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

